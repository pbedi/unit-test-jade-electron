extends layout

block content
  h1= title
  form(name="editdevelopment" action="/#{development._id}/remove" method="post" ,enctype="application/x-www-form-urlencoded")
    div
      div Are you sure, you want to delete this development
      div
        span.new Name:
        b=development.name
      div
        span.new Description
        b=development.description
      input(type='hidden',value='DELETE',name='_method')
      div.submit
        input(name="submitbtn" type="submit" value="Delete Confirmation" class="btn")
