extends layout

block content
  h1= title
  form(name="editdevelopment" action="/#{development._id}/edit" method="post" ,enctype="application/x-www-form-urlencoded")
    div
      div
        span.new Name:
        input(type="text" id="development_name",name="development_name",value="#{development.name}")
      div
        span.new Description
        textarea(id="description",name="description",row=2) development.description
      div
        span.new Image path:
        input(type="text" id="imagepath",name="imagepath",value="#{development.imagepath}")
      div
        span.new DevelopmentID:
        input(type="text" id="development_id",name="development_id",value="#{development.developmentid}")
      div
        span.new is Active:
        input(type="text" id="isactive",name="isactive",value="#{development.isactive}")
      input(type='hidden',value='PUT',name='_method')
      div.submit
        input(name="submitbtn" type="submit" value="Update Development" class="btn")
